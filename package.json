{
  "name": "simple-project",
  "version": "1.0.0",
  "description": "A boilerplate solidity template to start writing our smartcontract fast",
  "license": "MIT",
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deployments/main.ts",
    "deploy:localhost": "npx hardhat run scripts/deployments/main.ts --network localhost",
    "node": "npx hardhat node",
    "frontend": "npx http-server frontend -p 8080 -o",
    "test": "npx hardhat test ./test/unit/multisigWallet.test.ts --network hardhat",
    "test-staging": "npx hardhat test ./test/staging/*.test.ts --network sepolia",
    "coverage": "npx hardhat coverage",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/contracts": "^4.8.3",
    "@types/node": "^24.10.1",
    "hardhat": "^2.13.1",
    "http-server": "^14.1.1",
    "solhint": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "path": "^0.12.7"
  }
}
